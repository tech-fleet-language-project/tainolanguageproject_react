{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "camelCase": [
            "always"
        ],
        "func-style": [
            "error",
            "declaration", 
            { "allowArrowFunctions": true }
        ],
        "arrow-body-style": [
            "error", 
            "always"
        ],
        "class-methods-use-this": [
            "error"
        ],
        "complexity": [
            "error", 
            4
        ]
    }
}
